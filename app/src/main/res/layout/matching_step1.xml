<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/matching_step_1_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/match_step_1_toolbar"
            layout="@layout/toolbar_with_back_arrow" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/TVSelectFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/matching_step_1_app_bar"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="@dimen/margin_5"
        android:text="Select friends"
        android:textColor="@color/black"
        android:textSize="@dimen/text_24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chooselist"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/TVSelectFriends"
        android:layout_marginTop="@dimen/margin_15"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_storelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rv_chooselist"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/upper_border" />

    <Button
        android:id="@+id/BtnNext"
        android:layout_width="@dimen/margin_300"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_30"
        android:background="@drawable/btn_shape"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

</RelativeLayout>