<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="72dp">


    <LinearLayout
        android:id="@+id/LinearLayout_info_choose"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/info_photo_choose"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/info_name_choose"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal">

        </TextView>

        <TextView
            android:id="@+id/info_sign_choose"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal">

        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/BtnClose"
        android:layout_width="20dp"
        android:layout_height="20dp"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:background="@drawable/circle_image_button"
        android:src="@drawable/choose_close">

    </ImageView>



</RelativeLayout>